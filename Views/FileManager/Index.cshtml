@using TestTask.Models
@model List<Files>
<button type="button" class="btn btn-success" id="SortFileButton">Сортировка<i class="bi bi-arrow-down"></i></button>

<div class="d-flex flex-column" id="MainDiv">
    @foreach (Files item in Model)
    {
        <div>
            <i class="bi bi-caret-right" id="RootElement" key="@item.Hash"></i>
            <span>@item.Name (@item.Weight МБ)</span>
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" id="StartAddFolder" data-bs-target="#AddFolder"><i class="bi bi-folder-plus"></i></button>
            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" id="StartAddFile" data-bs-target="#AddFile"><i class="bi bi-file-earmark-plus"></i></button>
        </div>
    }
</div>

<div class="modal fade" id="AddFolder" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AddFolderLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddFolderLabel">Создание папки</h5>
            </div>
            <div class="modal-body">
                Введите название папки
                <input type="text" class="form-control" id="FolderNameInput">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="CreateFolderButton">Создать</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddFile" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AddFileLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddFileLabel">Создание файла</h5>
            </div>
            <div class="modal-body">
                Введите название файла
                <input type="text" class="form-control" id="FileNameInput">
                Введите содержание файла
                <textarea class="form-control" id="FileContentInput"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="CreateFileButton">Создать</button>
            </div>
        </div>
    </div>
</div>

<script src="js/Index.js"></script>
